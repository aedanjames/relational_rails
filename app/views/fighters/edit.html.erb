<%= form_with url: "/fighters/#{@fighter.id}", method: :patch, local: :true do |form| %>
<p><%= form.label :name %></p>
<p><%= form.text_field :name, :value => "#{@fighter.name}" %></p>
<p><%= form.label :height %></p>
<p><%= form.text_field :height, :value => "#{@fighter.height}" %></p>
<p><%= form.label :weight %></p>
<p><%= form.text_field :weight, :value => "#{@fighter.weight}" %></p>
<p><%= form.label :reach %></p>
<p><%= form.text_field :reach, :value => "#{@fighter.reach}" %></p>
<p><%= form.label :stance %></p>
<p><%= form.select :stance, options_for_select(["Southpaw", "Orthodox", "Switch"])%></p>
<p><%= form.label :active %></p>
<p><%= form.select :active, options_for_select([true, false])%></p>
<p><%= form.submit "Update Fighter" %>
<% end %>