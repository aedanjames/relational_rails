<h1>All Fighters</h1>

<% @fighters.is_active.each do |fighter| %>
    <h3><%= link_to fighter.name, "/fighters/#{fighter.id}" %><%= button_to "Edit #{fighter.name}", "/fighters/#{fighter.id}/edit", method: :get %></h3>
    <%= button_to "Delete #{fighter.name}", "/fighters/#{fighter.id}/", method: :delete %>
    <p>Height: <%= fighter.height %> meters</p>
    <p>Weight: <%= fighter.weight %> lbs</p>
    <p>Reach: <%= fighter.reach %> inches</p>
    <p>Stance: <%= fighter.stance %>
    <p>Actively fighting: <%= fighter.active %>
<% end %>