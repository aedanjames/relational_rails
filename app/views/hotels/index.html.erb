<h1>All hotels</h1>

<% @hotels.in_order.each do |hotel| %>
    <h3><%= link_to hotel.name, "/hotel/#{hotel.id}"%> <br> <%= button_to "Edit #{hotel.name}", "/hotels/#{hotel.id}/edit", method: :get %></h3>
    <p> Created at: <%= hotel.created_at%></p>

  <%= link_to "New Hotel", '/hotels/new' %>

<% end %>
